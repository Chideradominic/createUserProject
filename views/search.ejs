<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
  </head>

  <body>
    <h1><%=title%></h1>

    <ul>
      <% users.forEach(user => { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>
        Age: <%= user.age %> Email: <%= user.email %> Bio: <%= user.bio %>
        <a href="/<%= user.id %>/update">Update</a>
        <form
          action="/<%= user.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button type="submit" onclick="return confirm('Delete this user?')">
            Delete
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
    <a href="/">Back to home</a>
  </body>
</html>
